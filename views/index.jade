extend layout

mixin contact-box(map_target)
  div.contact-box
    block
    a.link-with-icon(href="mailto:lol@bal.com")
      span.fa.fa-envelope-o
      | Ota yhteyttä

mixin map-box(map_target)
  div.map-box
    div(id='map-#{map_target}').map-frame
      i.fa.fa-times
      div.border
      div.google-maps.inline
    block
    a.link-with-icon(href="##{map_target}" onclick="showMap('#{map_target}')")
      i.fa.fa-external-link
      | Näytä kartalla

mixin section(name)
  section.section
    h2(id= name).inline= t(name + ".header")
    div.inline
      block
      img(src="/img/arrow-divider.png").divider

block church
  +section("church")
    div.inline.text-box
      p= t("church.ceremony")
